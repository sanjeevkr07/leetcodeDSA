class Solution {
public:
    
    bool possible(vector<int>& weights,int n, int days,int mid){
        int day=1;
        int w=0;
        
        for(int i=0;i<n;i++){
            
            if(w+weights[i]<=mid){
                w+=weights[i];
            }
            else{
                day++;
                if(day>days || weights[i]>mid)
                    return false;
                w=weights[i];
            }
        }
        
        return true;
    }
    
    
    int shipWithinDays(vector<int>& weights, int days) {
        
        int s=0;
        int e=0;
        int n=weights.size();
        for(int i=0;i<n;i++){
            e+=weights[i];
        }
        
        int mid=s+(e-s)/2;
        
        while(s<=e){
            
            if(possible(weights,n,days,mid)){
                e=mid-1;
            
            }
            else{
                s=mid+1;
            }
            
            mid=s+(e-s)/2;
        }
        
        
     return mid; 
    }
};
